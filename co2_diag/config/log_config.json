{
    "version": 1,
    "disable_existing_loggers": "false",
    "formatters": {
        "simplest": {
            "class": "logging.Formatter",
            "format": "%(message)s"
        },
        "simple": {
            "datefmt": "%y%j-%H%M%S",
            "format": "%(asctime)s - %(message)s"
        },
        "basic": {
            "class": "logging.Formatter",
            "datefmt": "%I:%M:%S",
            "format": "%(asctime)s %(levelname)s %(name)s %(message)s"
        },
        "detailed": {
            "format": "%(asctime)s - %(pathname):%(lineno) - %(message)s"
        }
    },

    "handlers": {
        "stderr": {
            "class": "logging.StreamHandler",
            "level": "INFO",
            "formatter": "basic",
            "stream": "ext://sys.stderr"
        },
        "console": {
            "level": "DEBUG",
            "formatter": "simplest",
            "class": "logging.StreamHandler",
            "stream": "ext://sys.stdout"
        },
        "rotating_file": {
            "level": "DEBUG",
            "formatter": "basic",
            "class": "logging.handlers.RotatingFileHandler",
            "encoding": "utf-8",
            "maxBytes": 10485760,
            "backupCount": 7,
            "filename": "test.log"
        }
    },

    "loggers": {
        "co2_diag.recipes": {
            "handlers": ["rotating_file", "console"],
            "level": "INFO",
            "propagate": false
        },
        "co2_diag.data_source": {
            "handlers": ["rotating_file", "console"],
            "level": "INFO",
            "propagate": false
        },
        "co2_diag.data_source.datasetdict": {
            "handlers": ["rotating_file", "console"],
            "level": "INFO",
            "propagate": false
        },
        "co2_diag.data_source.obspack.load": {
            "handlers": ["rotating_file", "console"],
            "level": "DEBUG",
            "propagate": false
        },
        "co2_diag.formatters": {
            "handlers": ["console"],
            "level": "DEBUG",
            "propagate": false
        },
        "co2_diag.graphics": {
            "handlers": ["console"],
            "level": "DEBUG",
            "propagate": false
        },
        "co2_diag.operations": {
            "handlers": ["console"],
            "level": "INFO",
            "propagate": false
        },
        "co2_diag.operations.time": {
            "handlers": ["console"],
            "level": "INFO",
            "propagate": false
        }
    },

    "root": {
        "handlers": ["console"],
        "level": "INFO"
    }
}
